    {{#if przedmioty}}
    <table>
{{# each przedmioty}}
<tr>
    <th>Nazwa</th>
    <th>Obrazek</th>
    <th>Typ</th>
    <th>Atak</th>
    <th>Obrona</th>
    <th>Obrażenia</th>
    <th>Pancerz</th>
    <th>Siła</th>
    <th>Zręczność</th>
    <th>Wytrzymałość</th>
</tr>

<tr>
    <td>{{this.nazwa}}</td>  
    <td><img src="{{this.itembase.obrazek}}" title="{{this.nazwa}}" width="100px" height="100px"></td>
    <td>{{this.typ}}</td> 
     <td>{{this.atak_m}}</td>
     <td>{{this.obrona_m}}</td>

    <td>{{this.obrazenia_min_m}} - {{this.obrazenia_max_m}}</td>

     <td>{{this.pancerz_m}}</td>
     <td>{{this.sila_add_m}}</td>
     <td>{{this.zrecznosc_add_m}}</td>
     <td>{{this.wytrzymalosc_add_m}}</td>


     <td>
{{#ifeq this.typ "Broń"}}


<form action = '/character/inventory/zaloz2' method ='post'>
<input type="hidden" name="do_zalozenia_main" value="{{this._id}}">
<input type = 'submit' value = 'Załóż Główna'>
</form>

<form action = '/character/inventory/zaloz2' method ='post'>
<input type="hidden" name="do_zalozenia_off" value="{{this._id}}">
<input type = 'submit' value = 'Załóż Poboczna'>
</form>
{{else}}

    {{#ifeq this.typ "Pierścień"}}
    <form action = '/character/inventory/zaloz2' method ='post'>
    <input type="hidden" name="do_zalozenia_left" value="{{this._id}}">
    <input type = 'submit' value = 'Załóż Lewy'>
    </form>
    <form action = '/character/inventory/zaloz2' method ='post'>
    <input type="hidden" name="do_zalozenia_right" value="{{this._id}}">
    <input type = 'submit' value = 'Załóż Prawy'>
    </form>
    {{else}}
    <form action = '/character/inventory/zaloz' method ='post'>
    <input type="hidden" name="do_zalozenia" value="{{this._id}}">
    <input type = 'submit' value = 'Załóż'>
    </form>
    {{/ifeq}}

{{/ifeq}}

</form>
</td>
</tr>



{{/each}}
